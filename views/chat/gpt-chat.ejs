<div class="chat-container">
    <aside>
        <h3>Chat Rooms</h3>
        <ul id="chat-rooms">
            <!-- 채팅방 목록이 여기에 표시됨 -->
        </ul>
        <button onclick="createNewChatRoom()">New Chat Room</button>
    </aside>
    <section class="chat-box">
        <h3>Chat</h3>
        <div id="chat-messages">
            <!-- 대화 내용이 여기에 표시됨 -->
        </div>
        <input type="text" id="user-input" placeholder="Type your message">
        <button onclick="sendMessage()">Send</button>
    </section>
</div>
<script src=".../public/js/chat"></script>
